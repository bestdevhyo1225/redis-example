{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "types/*": ["../types/*"]
    },
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": ["src/**/*", "types"],
  "exclude": ["node_modules"]
}
